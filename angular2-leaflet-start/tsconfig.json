{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"../node_modules/@types"
		],
		"types" : [
			"leaflet",
			"node",
			"es6-shim"
		]
	},
	"exclude": [
		"node_modules"
	]
}